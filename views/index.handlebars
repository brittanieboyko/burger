<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center">Eat Da Burger</h1>
  </div>
</div>

<div class="row">
    <div class="col-4">
      <ul class="list-group">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-4">
      <ul class="list-group disabled">
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
      </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form container">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <textarea class="form-control" id="ca" rows="3"></textarea>
  </div>

  <button type="submit">Add Burger</button>
</form>